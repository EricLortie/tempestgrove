<!-- Site Name -->
<meta property="og:site_name" content="{$og_tags.site_name}">

<!-- Title -->
<meta property="og:title" content="{$og_tags.title|escape}">

<!-- URL -->
<meta property="og:url" content="{$og_tags.url}">

<!-- Image -->
<meta property="og:image" content="{$og_tags.image}">

<!-- Type -->
<meta property="og:type" content="{$og_tags.type}">

<!-- Content -->
<meta property="og:description" content="{$og_tags.description|escape}">

<!-- Twitter Card -->
<meta property="twitter:card" content="summary">

<!-- Twitter Handle -->
<meta property="twitter:site" content="{$options.twitter_handle}">

<!-- Twitter Title -->
<meta property="twitter:title" content="{$og_tags.title|escape}">

<!-- Twitter Description -->
<meta property="twitter:description" content="{$og_tags.description|escape}">

<!-- Twitter Image -->
<meta property="twitter:image" content="{$og_tags.image}">
